<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SubCategoryActivity"
    android:background="@color/white">
    <include layout="@layout/custom_header"
        android:id="@+id/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/relative"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/product_image"
                android:layout_centerVertical="true"
                android:src="@drawable/apture"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/product_image"
                android:id="@+id/product_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="Auspicious Incense Enterprise"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10sp"
                android:src="@drawable/plus"
                android:id="@+id/addTocart"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/product_image">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/refral_no"
                    android:layout_marginLeft="10dp"
                    android:text="REF12058848548"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeText"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="10:41:25 | 02:45:32"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/price"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="RM182.00"
                    android:textColor="@color/light_blue"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>